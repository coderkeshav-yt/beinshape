{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install --legacy-peer-deps",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable",
        "content-type": {
          "\\.js": "application/javascript",
          "\\.css": "text/css",
          "\\.json": "application/json",
          "\\.png": "image/png",
          "\\.jpg": "image/jpeg",
          "\\.jpeg": "image/jpeg",
          "\\.gif": "image/gif",
          "\\.svg": "image/svg+xml",
          "\\.woff": "font/woff",
          "\\.woff2": "font/woff2",
          "\\.ttf": "font/ttf",
          "\\.eot": "font/eot"
        }
      }
    },
    {
      "src": "/(.*\\.(js|css|json|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ]
}
